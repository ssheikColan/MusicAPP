<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_editor_absoluteY="10dp"
                app:layout_editor_absoluteX="10dp"
                android:id="@+id/img_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/avd_pause_to_play"></ImageView>

            <TextView
                app:layout_editor_absoluteY="28dp"
                android:id="@+id/txt_top"
                app:layout_constraintLeft_toRightOf="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wildest"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_x"
                />

            <TextView
                app:layout_constraintLeft_toRightOf="@+id/img_logo"
                app:layout_constraintTop_toBottomOf="@id/txt_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taylor"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_l"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>